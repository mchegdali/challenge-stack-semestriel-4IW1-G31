{# templates/pdf/my_pdf_template.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
<style>
    /* Equivalent de m-6 */
    .m-6 {
        margin: 1.5rem;
    }

    /* Equivalent de text-2xl */
    .text-2xl {
        font-size: 1.5rem;
        line-height: 2rem;
    }

    /* Equivalent de font-bold */
    .font-bold {
        font-weight: bold;
    }

    /* Equivalent de text-xs */
    .text-xs {
        font-size: 0.75rem;
        line-height: 1rem;
    }

    /* Equivalent de text-small (Tailwind n'a pas de classe text-small par défaut, donc je suppose une taille personnalisée) */
    .text-small {
        font-size: 0.875rem; /* Tailwind .text-sm est 0.875rem */
    }

    /* Equivalent de flex */
    .flex {
        display: flex;
    }

    /* Equivalent de justify-between */
    .justify-between {
        justify-content: space-between;
    }

    /* Equivalent de justify-center */
    .justify-center {
        justify-content: center;
    }

    /* Equivalent de gap-2 */
    .gap-2 {
        gap: 0.5rem;
    }

    /* Equivalent de w-11/12 */
    .w-11\/12 {
        width: 91.666667%;
    }

    /* Equivalent de border-1, border-t, et border-blue-500 */
    .border-1 {
        border-width: 1px;
    }
    .border-t {
        border-top-width: 1px;
    }
    .border-blue-500 {
        border-color: #3b82f6;
    }

    /* Equivalent de flex-auto */
    .flex-auto {
        flex: 1 1 auto;
    }

    /* Equivalent de w-6/12 */
    .w-6\/12 {
        width: 50%;
    }

    /* Equivalent de w-1/6 */
    .w-1\/6 {
        width: 16.666667%;
    }

    /* Equivalent de min-h-250 (Tailwind n'a pas de classe min-h-250, donc je suppose une hauteur minimale personnalisée) */
    .min-h-250 {
        min-height: 250px;
    }

    /* Equivalent de pl-3 */
    .pl-3 {
        padding-left: 0.75rem;
    }

    /* Equivalent de py-3 */
    .py-3 {
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
    }

    /* Pour les items-end et flex-col, qui sont des spécificités de flexbox */
    .items-end {
        align-items: flex-end;
    }
    .flex-col {
        flex-direction: column;
    }

    /* Styles supplémentaires pour la clarté */
    body, html {
        font-family: Arial, sans-serif;
    }
</style>

</head>
<body>

    
<main>

