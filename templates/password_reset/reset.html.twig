{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="items-center h-screen flex justify-center sm:bg-gray-50">
<div class="p-3 bg-white shadow-md rounded-xl w-full flex items-center flex-col gap-3">
    <h1 class="font-bold text-3xl md:text-4xl mb-8">Réinitialisation du mot de passe</h1>
   <div class="w-full max-w-xs">
    {{ form_start(resetForm,{'attr': {'class': 'space-y-4'}}) }}
        {{ form_row(resetForm.newPassword, {
            label: 'Nouveau mot de passe',
            attr: {class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}
        }) }}
        {{ form_row(resetForm.submit, {
            attr: {class: 'font-bold w-full py-2 px-4 rounded text-sm bg-blue-800 hover:bg-blue-900 text-white'}
        }) }}
    {{ form_end(resetForm) }}
</div>
</div>
</div>

{% endblock %}