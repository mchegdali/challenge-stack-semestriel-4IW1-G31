{% extends 'base.html.twig' %}

{% block title %}Plumbill{% endblock %}
{% block body %}
    {% include 'components/Navbar.html.twig' %}
    
    <main class="mt-2">
        <header class="mb-2 p-1 w-full flex items-center gap-2 justify-between md:justify-start">
            <h1 class="font-bold text-3xl">Filtrer Paiements</h1>
            <a href="{{ path('payment_index') }}"
               class="flex py-2 px-4 rounded bg-white border border-blue-800 text-blue-800">Annuler</a>
        </header>
        <section class="flex flex-col w-full gap-1">
            <form action="{{ path('payment_search') }}" method="post" class="flex flex-col gap-4">
                <section class="bg-white">
                    <header class="bg-blue-100 uppercase text-blue-950 pl-2 font-semibold">
                        Filtrer par statut
                    </header>
                    <div class="pl-2 bg-white">
                        {{ form_widget(searchForm.status) }}
                    </div>
                </section>
                <section class="bg-white">
                    <header class="bg-blue-100 uppercase text-blue-950 pl-2 font-semibold">
                        Filtrer par date
                    </header>
                    <div class="pl-2 bg-white">
                        {{ form_widget(searchForm.dueDate) }}
                    </div>

                </section>
                <section class="w-full flex flex-col justify-between md:flex-row md:justify-end gap-2 px-2">
                    <button type="submit"
                            class="bg-blue-800 text-white px-4 py-2 rounded-md font-semibold text-sm min-w-full md:min-w-fit">
                        Appliquer
                    </button>

                </section>


            </form>
        </section>
    </main>

{% endblock %}



