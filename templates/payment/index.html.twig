{% extends 'base.html.twig' %}

{% block title %}Plumbill{% endblock %}

{% block body %}
    {% include 'components/Navbar.html.twig' %}

    <main class="container mx-auto pt-1">
        <header class="mb-2 p-1 w-full flex items-center gap-2 justify-between md:justify-start">
            <h1 class="font-bold text-3xl">Paiements</h1>
            <a href="{{ path('payment_search') }}"
               class="flex py-2 px-4 rounded bg-white border border-blue-800 text-blue-800">Filtrer</a>
        </header>
        <section class="flex flex-col w-full gap-1">
            {% if payments|length == 0 %}
                <p class="text-center">Aucun paiement</p>
            {% endif %}
            {% for payment in payments %}
                <twig:Payment:PaymentListItem :payment="payment"/>
            {% endfor %}
        </section>
    </main>
{% endblock %}


