{% extends 'base.html.twig' %}

{% block title %}Plumbill
{% endblock %}

{% block body %}

{% include 'components/Navbar.html.twig' %}
<main class="mx-2 mt-2">
		<header class="mb-2 p-1">
			<h1 class="font-bold text-3xl">Plumbill</h1>
		</header>

		<section class="mb-2 px-4 py-2 bg-white shadow-sm rounded-lg">
			<a href="{{path('invoice_new')}}"><h2>Créer une facture</h2></a>
			<h2>Factures ({{ invoiceCount }})</h2>
			<h2>Non échues ({{ unpaidInvoicesCount }})</h2>
			<h2>En retard (- de 30 jours) ({{ invoiceCountLate1 }})</h2> 
			<h2>En retard (+ de 30 jours) ({{ invoiceCountLate2 }})</h2>
			<div class="h-screen flex justify-center items-center">
				<div class="w-1/2">
					<canvas id="myChart" class="w-full h-full"></canvas>
				</div>
			</div>
		</section>
	</main>
{% endblock %}


{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Non échues', 'Non payées', 'Payées'],
                    datasets: [{
                        label: 'Parts de factures',
                        data: [
                            {{ unpaidInvoicesCount }},
                            {{ invoiceCountLate1 }},
                            {{ invoiceCountLate2 }}
                        ],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        });
    </script>
{% endblock %}
