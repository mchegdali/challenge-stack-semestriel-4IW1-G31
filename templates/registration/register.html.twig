{% extends '_blank-layout.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
    <header class="flex flex-col items-center gap-2 md:gap-6 mb-4 md:pt-20">
        <div class="max-w-sm">
            <img src="{{ asset('img/logo2.png') }}" alt="Plumbill">
        </div>
        <h1 class="font-bold text-3xl md:text-4xl">Création de compte entreprise</h1>
    </header>
    <main class="pb-2 mx-auto container">
        <twig:Card class="p-4 bg-white shadow-md md:rounded-xl max-w-screen-sm flex flex-col">
            <div class="flex flex-col w-full gap-3">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {% if app.request.method == 'POST' %}
                    {% for error in registrationForm.vars.errors %}
                        <div class="alert alert-danger" role="alert">{{ error.message }}</div>
                    {% endfor %}
                {% endif %}

                {{ form_start(registrationForm) }}
                {{ form_end(registrationForm) }}

            </div>

            <a href={{ path('app_login') }}>Vous avez déjà un compte ?</a>


        </twig:Card>
    </main>
{% endblock %}
