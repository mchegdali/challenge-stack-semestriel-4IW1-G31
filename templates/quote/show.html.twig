{% extends 'base.html.twig' %}

{% block title %}Plumbill{% endblock %}

{% block body %}
    {% include 'components/Navbar.html.twig' %}
    <main class="mx-auto container px-4 pt-2 sm:px-0 space-y-2">
        <header class="px-1 sm:px-0">
            <h1 class="text-3xl font-bold">Devis</h1>
        </header>
        <twig:Card>
            <h2 class="text-xl font-bold mb-2">Récapitulatif</h2>
            <div class="gap-1.5 w-full grid grid-cols-6">
                <section class="col-span-6 grid grid-cols-subgrid">
                    <div class="col-span-5 flex flex-col">
                        <span class="text-gray-800 text-xs uppercase font-medium  leading-tight tracking-wide">Numéro de devis</span>
                        <span class="text-black font-bold leading-tight">{{ quote.quoteNumber }}</span>
                    </div>
                    <div class="col-span-1 flex flex-col">
                        <span class="text-gray-800 text-xs uppercase font-medium leading-tight tracking-wide">Statut</span>
                        <twig:StatusBadge :status="quote.status"/>
                    </div>
                </section>
                <section class="col-span-6 grid grid-cols-subgrid">
                    <div class="col-span-3 flex flex-col">
                        <span class="text-gray-800 text-xs uppercase font-medium  leading-tight tracking-wide">Nom du client</span>
                        <span class="text-black font-bold leading-tight">{{ quote.customer.name }}</span>
                    </div>
                    <div class="col-span-3 flex flex-col">
                        <span class="text-gray-800 text-xs uppercase font-medium  leading-tight tracking-wide">Numéro de client</span>
                        <span class="text-black font-bold leading-tight">{{ quote.customer.customerNumber }}</span>
                    </div>
                </section>
                <section class="col-span-6 grid grid-cols-subgrid">
                    <div class="col-span-3 flex flex-col">
                        <span class="text-gray-800 text-xs uppercase font-medium  leading-tight tracking-wide">Date de création</span>
                        <span class="text-black font-bold leading-tight">{{ quote.createdAt|date('d/m/Y') }}</span>
                    </div>
                </section>
            </div>
        </twig:Card>
        <twig:Card>
            <div class="grid grid-cols-quote-items mb-2">
                <div class="grid grid-cols-subgrid col-span-4">
                    <span class="font-semibold">Éléments</span>
                    <span class="font-semibold justify-self-center">Qt</span>
                    <span class="font-semibold justify-self-center">TVA</span>
                    <span class="font-semibold justify-self-end">Total</span>
                </div>
                {% for item in quote.quoteItems %}

                    <div class="grid grid-cols-subgrid col-span-4">
                        <span>{{ item.service.name }}</span>
                        <span class="justify-self-center">{{ item.quantity }}</span>
                        <span class="justify-self-end">{{ item.tax.value }}%</span>
                        <span class="justify-self-end">{{ item.priceIncludingTax|format_currency('EUR', locale='fr_FR') }}</span>
                    </div>
                {% endfor %}
            </div>
            <div class="flex justify-end mb-2">
                <div class="border border-black rounded-sm px-2 py-1 w-1/2">
                    <div class="w-full flex justify-between">
                        <span class="font-semibold">Sous-total</span>
                        <span>{{ quote.totalExcludingTax|format_currency('EUR', locale='fr_FR') }}</span>
                    </div>
                    <div class="w-full flex justify-between">
                        <span class="font-semibold">TVA</span>
                        <span>{{ quote.taxAmount|format_currency('EUR', locale='fr_FR') }}</span>
                    </div>
                    <div class="w-full flex justify-between">
                        <span class="font-semibold">TOTAL</span>
                        <span>{{ quote.totalIncludingTax|format_currency('EUR', locale='fr_FR') }}</span>
                    </div>
                </div>
            </div>
            <div class="flex justify-between gap-2.5">
                {% if quote.status.name == 'draft' %}
                    <button class="grow flex place-content-center text-white bg-blue-600 rounded px-2 py-1 font-semibold text-sm">
                        Envoyer
                    </button>
                {% elseif quote.status.name == 'sent' %}
                    <button class="grow flex place-content-center text-blue-600 border border-blue-600 bg-white font-semibold text-sm rounded px-2 py-1">
                        Envoyé
                    </button>
                {% elseif quote.status.name == 'accepted' %}
                    <button class="grow flex place-content-center text-green-600 border border-green-600 bg-white font-semibold text-sm rounded px-2 py-1">
                        Envoyé
                    </button>
                {% elseif quote.status.name == 'refused' %}
                    <span class="cursor-default grow flex place-content-center text-red-600 border border-red-600 bg-white font-semibold text-sm rounded px-2 py-1">
                        Devis refusé
                    </span>
                {% endif %}

            </div>
        </twig:Card>
    </main>
{% endblock %}
