{% props status %}

<div class="px-1.5 py-1 rounded-md justify-center items-center flex h-fit w-fit bg-{{ status.bgColor }} dark:bg-{{ status.textColor }} dark:border dark:border-{{ status.borderColor }}">
    <span class="text-{{ status.textColor }} dark:text-{{ status.bgColor }} text-center text-xs font-semibold leading-none">{{ status.displayName }}</span>
</div>