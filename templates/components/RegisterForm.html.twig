<div class="bg-white flex flex-col justify-center items-center gap-6">
	<div class="flex flex-col items-center gap-6">
		<h1 class="font-bold text-3xl ">Inscription</h1>
	</div>

	<div class="flex flex-col w-full gap-3">

		<div class="flex-col gap-1 w-full">
			<label for="username" class="text-base">Mail</label>
			<input type="text" id="email" class="border-2 w-full p-2" placeholder="exemple@mail.com">
		</div>

		<div class="flex flex-col gap-1 w-full">
			<label for="password" class="text-base">Nom de l'entreprise</label>
			<input type="password" class="border-2 w-full p-2" placeholder="Nom de l'entreprise XYZ">
		</div>

		<div class="flex flex-col gap-1 w-full">
			<label for="address" class="text-base">Adresse</label>
			<input type="text" class="border-2 w-full p-2" placeholder="123 Rue de l'Exemple">
		</div>

		<div class="flex flex-col gap-1 w-full">
			<label for="postal_code" class="text-base">Code postal</label>
			<input type="text" class="border-2 w-full p-2" placeholder="75016">
		</div>

		<div class="flex flex-col gap-1 w-full">
			<label for="city" class="text-base">Ville</label>
			<input type="text" class="border-2 w-full p-2" placeholder="Paris">
		</div>

		<div class="flex flex-col gap-1 w-full">
			<label for="siret" class="text-base">SIRET</label>
			<input type="text" class="border-2 w-full p-2" placeholder="12345678901234">
		</div>


		<div class="flex flex-col gap-1 w-full">
			<label for="password" class="text-base">Mot de passe</label>
			<input type="password" id="password" class="border-2 w-full p-2" placeholder="Mot de passe">
		</div>

		<div class="flex flex-col gap-1 w-full">
			<label for="password" class="text-base">Confirmer mot de passe</label>
			<input type="password" id="password" class="border-2 w-full p-2" placeholder="Confirmer mot de passe">
		</div>


		<div class="flex flex-row justify-center items-center flex-1 gap-3">
			<button class="w-full text-white bg-button-color p-1.5 border border-button-color rounded-lg" type="submit">
				S’inscrire
			</button>
		</div>

		<div class="">

