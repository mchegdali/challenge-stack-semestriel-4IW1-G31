<div class="bg-white flex flex-col justify-center items-center gap-6 ">
	<div class="flex flex-col items-center gap-6">
		<div class="max-w-sm">
			<img src={{ asset('img/logo2.png') }} alt="">
		</div>
		<h1 class="font-bold text-3xl ">Connexion</h1>
	</div>

	<div class="flex flex-col w-full gap-3">
		<form method="post" class="flex flex-col w-full gap-3">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}
			<div class="flex flex-col justify-center items-center">
				<div class="ml-12 mr-12 flex flex-col gap-1 w-full">
					<label for="username" class="text-base">Nom d'utilisateur</label>
					<input type="text" id="username" value="{{ last_username }}" name="email" class="border-2 w-full p-2" placeholder="Nom d'utilisateur" required autofocus>
				</div>

				<div class="ml-12 mr-12 flex flex-col gap-1 w-full">
					<label for="password" class="text-base">Mot de passe</label>
					<input type="password" id="password" name="password" class="border-2 w-full p-2" placeholder="Mot de passe" required>
				</div>
			</div>

			<div class="flex flex-row justify-center items-center flex-1 w-full gap-3">
				<button class="w-full bg-white text-button-color p-1.5 border border-button-color rounded-lg" type="submit">
					Créer un compte
				</button>
				<button class="w-full text-white bg-button-color p-1.5 rounded-lg" type="submit">
					Se connecter
				</button>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			</div>
		</form>


		<a href="">Mot de passe oublié ?</a>


	</div>

</div>
