<twig:Card class="p-4 bg-white shadow-md sm:rounded-xl max-w-screen-sm flex flex-col">
    <form method="post" class="flex flex-col w-full gap-3">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="space-y-1">
            <label for="username" class="text-base">Adresse email</label>
            <input type="text" id="username" value="{{ last_username }}" name="email"
                   class="w-full" placeholder="bill@plumbill.fr" required autofocus>
        </div>

        <div class="space-y-1">
            <label for="password" class="text-base">Mot de passe</label>
            <input type="password" id="password" name="password" class="w-full"
                   placeholder="Mot de passe" required>
        </div>

        <div class="flex w-full gap-4 justify-between">
            <a href="{{ path('app_register') }}"
               class="font-semibold py-2 px-4 rounded border border-primary bg-white text-primary hover:bg-blue-100 w-full">
                Créer un compte
            </a>
            <button class="w-full font-semibold py-2 px-4 rounded border border-primary bg-primary hover:bg-darkblue text-white"
                    type="submit">
                Se connecter
            </button>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
    </form>

    <a href="">Mot de passe oublié ?</a>
</twig:Card>