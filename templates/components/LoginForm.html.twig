<div class="p-3 bg-white shadow-md rounded-xl w-full flex flex-col gap-3">
    <form method="post" class="flex flex-col w-full gap-3">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <div class="space-y-1">
            <label for="username" class="text-base">Adresse email</label>
            <input type="text" id="username" value="{{ last_username }}" name="email"
                   class="w-full rounded-sm" placeholder="bill@plumbill.fr" required autofocus>
        </div>

        <div class="space-y-1">
            <label for="password" class="text-base">Mot de passe</label>
            <input type="password" id="password" name="password" class="border-2 w-full p-2"
                   placeholder="Mot de passe" required>
        </div>

        <div class="flex w-full gap-2">
            <a href="{{ path('app_register') }}"
               class="font-semibold py-2 px-4 rounded border border-blue-800 bg-white text-blue-800 hover:bg-blue-100 w-full">
                Créer un compte
            </a>
            <button class="w-full font-semibold py-2 px-4 rounded border border-blue-800 bg-blue-800 hover:bg-blue-900 text-white"
                    type="submit">
                Se connecter
            </button>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
    </form>


    <a href="">Mot de passe oublié ?</a>
</div>