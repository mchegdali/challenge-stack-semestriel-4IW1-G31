{% props title, id %}

<!-- Modale -->
<div id="{{ id }}"
     class="fixed inset-0 z-50 hidden overflow-auto bg-black bg-opacity-50 items-center justify-center">
    <div class="bg-white dark:bg-blue-darker p-8 rounded shadow-lg w-full max-w-screen-md">
        <header class="w-full flex items-center justify-between">
            <h1 class="text-3xl font-bold">{{ title }}</h1>
            <span onclick="closeModal()"
                  class="rounded-full hover:bg-grey-light/50 size-8 relative transition-all duration-200 cursor-pointer">
                <i class="material-symbols-outlined -translate-x-1/2 -translate-y-1/2 absolute top-1/2 left-1/2">close</i>
            </span>
        </header>
        {% block form %}{% endblock %}
    </div>
</div>

<script>
    console.log("toto")

    function openModal() {
        document.getElementById('{{ id }}').classList.remove('hidden');
        document.getElementById('{{ id }}').classList.add('flex');
    }

    function closeModal() {
        document.getElementById('{{ id }}').classList.add('hidden');
        document.getElementById('{{ id }}').classList.remove('flex');
    }
</script>