		<!-- Modale -->
		<div id="myModal" class="fixed inset-0 z-50 hidden overflow-auto bg-black bg-opacity-50 flex items-center justify-center p-6">
			<div class="bg-white p-8 rounded shadow-lg text-black">
				<h2 class="text-lg font-bold mb-4">Modifier les informations</h2>
				{{ form_start(form)}}
				{{ form_widget(form.first_name) }}
				<br>
				{{ form_widget(form.last_name) }}
				<div class="flex justify-between mt-3">
					{{ form_row(form.submit)}}
					<button onclick="closeModal()" class="bg-white text-primary font-bold p-2 rounded border border-primary">
						Fermer
					</button>
				</div>
				{{ form_end(form) }}
			</div>

		</div>

		<script>

			const modal = document.getElementById("myModal");


function openModal(event) {
event.preventDefault();
const modal = document.getElementById("myModal");
modal.classList.remove("hidden");
}


function closeModal() {
modal.classList.add("hidden");
}


window.onclick = function (event) {
if (event.target === modal) {
closeModal();
}
};


closeButton.onclick = function () {
closeModal();
};
		</script>
