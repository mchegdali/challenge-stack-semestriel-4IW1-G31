{% props invoice %}

<a href="{{ path('invoice_show', {id: invoice.id }) }}"
   class="bg-white dark:bg-blue-darker px-4 py-6 shadow-md rounded-xl gap-1.5 w-full grid grid-cols-6 hover:bg-hover-light hover:bg-opacity-75 hover:shadow-lg dark:hover:bg-hover-dark group">
    <section class="col-span-6 grid grid-cols-subgrid">
        <div class="col-span-5 flex flex-col">
            <span class="text-darkgrey dark:text-grey text-xs uppercase font-medium leading-tight tracking-wide">N° facture</span>
            <span class="dark:text-lightgrey font-bold leading-tight">{{ invoice.invoiceNumber }}</span>
        </div>
        <div class="col-span-1 flex justify-end">
            <twig:StatusBadge :status="invoice.status"/>
        </div>
    </section>
    <section class="col-span-6 grid grid-cols-subgrid">
        <div class="col-span-3 flex flex-col">
            <span class="text-darkgrey dark:text-grey text-xs uppercase font-medium  leading-tight tracking-wide">Date d'émission</span>
            <span class="dark:text-lightgrey font-bold leading-tight">{{ invoice.createdAt|date('d/m/Y') }}</span>
        </div>
        <div class="col-span-3 flex flex-col">
            <span class="text-darkgrey dark:text-grey text-xs uppercase font-medium  leading-tight tracking-wide">Client</span>
            <span class="dark:text-lightgrey font-bold leading-tight">{{ invoice.customer.name }}</span>
        </div>
    </section>
    <section class="col-span-6 grid grid-cols-subgrid">
        <div class="col-span-3 flex flex-col">
            <span class="text-darkgrey dark:text-grey text-xs uppercase font-medium  leading-tight tracking-wide">Montant HT</span>
            <span class="dark:text-lightgrey font-bold leading-tight">{{ invoice.totalExcludingTax|format_currency('EUR', locale='fr_FR') }}</span>
        </div>
        <div class="col-span-3 flex flex-col">
            <span class="text-darkgrey dark:text-grey text-xs uppercase font-medium  leading-tight tracking-wide">Montant TTC</span>
            <span class="dark:text-lightgrey font-bold leading-tight">{{ invoice.totalIncludingTax|format_currency('EUR', locale='fr_FR') }}</span>
        </div>
    </section>
</a>
