<div class="flex flex-col rounded-b-2xl w-screen">
	<div class='p-6 w-full flex flex-row justify-between rounded-lg'>

		<h1 class='text-2xl font-bold'>Client</h1>

		<button onclick="openModal()" class="bg-darkPurple text-white font-bold py-2 px-4 rounded w-auto items-center flex justify-center gap-2 text-sm">
			<p>Ajouter un client</p>
		</button>

	</div>

	<!-- Modale -->
	<div id="myModal" class="fixed inset-0 z-50 hidden overflow-auto bg-black bg-opacity-50 flex items-center justify-center">
		<button onclick="closeModal()">x</button>
		<div class="bg-white p-8 rounded shadow-lg">
			<h2 class="text-lg font-bold mb-4">Ajout d'un client</h2>

			{{ form_start(form, {'attr': {'class': 'flex flex-col w-full gap-2'}}) }}

			<span>
				<label>Nom</label>
				{{ form_row(form.name, {'attr': {'class': 'rounded-lg p-2 flex-1 w-56 border-2'}}) }}</span>

			<span>
				<label>Email</label>
				{{ form_row(form.email, {'attr': {'class': 'rounded-lg p-2 flex-1 w-56 border-2'}}) }}</span>

			<span>
				<label>Adresse</label>
				{{ form_row(form.address, {'attr': {'class': 'rounded-lg p-2 flex-1 w-56 h-10 bg-white border-2'}}) }}</span>

			<span>
				<label>Code postal</label>
				{{ form_row(form.postal_code, {'attr': {'class': 'rounded-lg p-2 flex-1 w-56 h-10 bg-white border-2'}}) }}</span>

			<span>
				<label>Ville</label>
				{{ form_row(form.city, {'attr': {'class': 'rounded-lg p-2 flex-1 w-56 h-10 bg-white border-2'}}) }}</span>

			<span class='flex gap-4 justify-end w-full mt-4'>
				{{ form_row(form.save, {'attr': {'class': 'rounded px-4 py-2 flex-1 bg-darkPurple font-bold text-white'}}) }}
				{{ form_end(form) }}

				<button onclick="closeModal()" class="bg-white flex-1 text-darkPurple font-bold p-2 rounded border border-darkPurple">
					Fermer
				</button>
			</span>


		</div>

	</div>

	<script>
		const modal = document.getElementById("myModal");

function openModal() {
modal.classList.remove("hidden");
}

function closeModal() {
modal.classList.add("hidden");
}

window.onclick = function (event) {
if (event.target === modal) {
closeModal();
}
};

closeButton.onclick = function () {
closeModal();
};
	</script>

</div></div>
