<div class="flex flex-col rounded-b-2xl w-screen">
	<div class='p-6 w-full flex flex-row justify-between rounded-lg'>

		<h1 class='text-2xl font-bold'>Client</h1>

		<button onclick="openModal()" class="bg-blue-800 text-white font-bold py-2 px-4 rounded w-auto items-center flex justify-center gap-2 text-sm">
			<p>Ajouter un client</p>
		</button>

	</div>

	<!-- Modale -->
	<div id="myModal" class="fixed inset-0 z-50 hidden overflow-auto bg-black bg-opacity-50 flex items-center justify-center">
		<button onclick="closeModal()">x</button>
		<div class="bg-white p-8 rounded shadow-lg">
			<h2 class="text-lg font-bold mb-4">Ajout d'un client</h2>

			{{ form_start(form)}}
				{{ form_row(form.name)}}
				{{ form_row(form.email)}}
				{{ form_row(form.address)}}
				{{ form_row(form.postal_code)}}			
				{{ form_row(form.city)}}

			<span class='flex gap-4 justify-end w-full mt-4'>
				{{ form_row(form.submit, {'attr': {'class': 'rounded px-4 py-2 flex-1 bg-blue-800 font-bold text-white'}}) }}
				{{ form_end(form) }}
				<button onclick="closeModal()" class="bg-white flex-1 text-blue-800 font-bold p-2 rounded border border-blue-800">
					Fermer
				</button>
			</span>


		</div>

	</div>

	<script>
		const modal = document.getElementById("myModal");

function openModal() {
modal.classList.remove("hidden");
}

function closeModal() {
modal.classList.add("hidden");
}

window.onclick = function (event) {
if (event.target === modal) {
closeModal();
}
};

closeButton.onclick = function () {
closeModal();
};
	</script>

</div></div>
