{% if is_granted('ROLE_ADMIN') %}
	<a href="{{path('app_user_details', {'id': user.id})}}">
		<div class="bg-white p-4 mx-6 my-2 rounded-lg flex flex-col">
			<div class='flex gap-2 justify-between items-center'>
				<div class='flex gap-4 items-center'>
					<p class="w-10 h-10 bg-slate-300 rounded-full flex items-center justify-center font-bold">{{ user.email|slice(0, 1)|capitalize }}
					</p>
					<p class=''>
						{{ user.email }}
					</p>
				</div>
				<div>
					<a onclick="openModalDelete('{{user.id}}')" class='text-red-500'>
						<i class="material-icons">delete_outline</i>
					</a>
				</div>
			</div>
		</div>
	</a>
{% else %}
	<div class="bg-white p-4 mx-6 my-2 rounded-lg flex flex-col">
		<div class='flex gap-2 justify-between items-center'>
			<div class='flex gap-4 items-center'>
				<p class="w-10 h-10 bg-slate-300 rounded-full flex items-center justify-center font-bold">{{ user.email|slice(0, 1)|capitalize }}
				</p>
				<p class=''>
					{{ user.email }}
				</p>
			</div>
		</div>
	</div>
{% endif %}

<!-- Modale -->
<div id="myModals" class="fixed inset-0 z-50 hidden overflow-auto bg-black bg-opacity-50 flex items-center justify-center">

	<div class="bg-white p-8 rounded shadow-lg">
		<h2 class="text-lg font-bold mb-4">Demande de confirmation</h2>

		<p>Voulez-vous vraiment supprimer ce compte ?</p>

		<div class='mt-6 flex flex-row justify-center items-center flex-1 w-full gap-3'>
			{% if is_granted('ROLE_ADMIN') %}
				<a href="{{ path('delete_user_admin', {'id': user.id}) }}" id="deleteLink" class='flex-1 text-red-500 font-bold p-2 rounded border border-red-500 text-center'>
					<p>Oui</p>
				</a>
			{% else %}
				<a href="{{ path('delete_user', {'id': user.id}) }}" class='flex-1 text-red-500 font-bold p-2 rounded border border-red-500 text-center'>
					<p>Oui</p>
				</a>
			{% endif %}

			<button onclick="closeDeleteModal()" class="bg-white flex-1 text-blue-800 font-bold p-2 rounded border border-blue-800">
				Non
			</button>
		</div>

	</div>

</div>

<script>
	const modale = document.getElementById("myModals");

function openModalDelete(userId) {
modale.classList.remove("hidden");
console.log("ID à supprimer : " + userId);

var deleteLink = "{{ path('delete_user_admin', {'id': '__userId__'}) }}".replace('__userId__', userId);

// Mettre à jour l'attribut href du lien à l'intérieur de la modal
document.getElementById('deleteLink').href = deleteLink;

// Ouvrir la modal
$('#myModals').modal('show');
}

function closeDeleteModal() {
modale.classList.add("hidden");
}

window.onclick = function (event) {
if (event.target === modale) {
closeDeleteModal();
}
};

closeButton.onclick = function () {
closeDeleteModal();
};
</script></div></div>
