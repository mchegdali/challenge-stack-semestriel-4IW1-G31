<div class="flex flex-col rounded-b-2xl w-screen">
	<h1 class='text-2xl font-bold px-6 pt-6'>Service</h1>
	<div class='p-6 flex justify-center items-center'>
		<div class='bg-white p-6 w-full flex flex-col justify-center rounded-lg gap-4'>
			<p>Ajouter une taxe</p>
			<button onclick="openModal()" class="bg-darkPurple text-white font-bold py-2 px-4 rounded w-full items-center flex justify-center gap-2">
				<p>
					Ajouter une taxe
				</p>
				<i class="material-icons">add</i>
			</button>
		</div>

		<!-- Modale -->
		<div id="myModal" class="fixed inset-0 z-50 hidden overflow-auto bg-black bg-opacity-50 flex items-center justify-center">
			<div class="bg-white p-8 rounded shadow-lg">
				<h2 class="text-lg font-bold mb-4">Ajout d'une taxe</h2>
				{{ form_start(form, {'attr': {'class': 'flex flex-col items-center w-full gap-4'}}) }}
				{{ form_row(form.value, {'attr': {'class': 'rounded-lg p-2 flex-1 w-56 border-2'}}) }}
				<span class='flex gap-4 justify-end w-full'>
					{{ form_row(form.save, {'attr': {'class': 'rounded px-4 py-2 flex-1 bg-darkPurple font-bold text-white'}}) }}
					<button onclick="closeModal()" class="bg-white flex-1 text-darkPurple font-bold p-2 rounded border border-darkPurple">
						Fermer
					</button>
				</span>

				{{ form_end(form) }}

			</div>

		</div>

		<script>
			// Récupérer la modale et le bouton de fermeture
const modal = document.getElementById("myModal");

// Fonction pour ouvrir la modale
function openModal() {
modal.classList.remove("hidden");
}

// Fonction pour fermer la modale
function closeModal() {
modal.classList.add("hidden");
}

// Fermer la modale en cliquant à l'extérieur
window.onclick = function (event) {
if (event.target === modal) {
closeModal();
}
};

// Fermer la modale en cliquant sur le bouton de fermeture
closeButton.onclick = function () {
closeModal();
};
		</script>

	</div>
</div>
