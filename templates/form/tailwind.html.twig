{% use 'tailwind_2_layout.html.twig' %}

{% block form_row %}
    {% set row_class = row_class|default('mb-2') %}
    {{ parent() }}
{% endblock form_row %}

{% block textarea_widget  %}
    {% set widget_class = widget_class|default('mt-1 w-full rounded-sm border border-red-800 justify-start items-center gap-2.5 flex placeholder:text-gray-300') %}
    {{ parent() }}
{% endblock textarea_widget  %}

{% block button_attributes  %}
    {% set widget_class = widget_class|default('rounded px-4 py-2 flex-1 bg-blue-800 font-bold text-white') %}
    {{ parent() }}
{% endblock button_attributes  %}

{% block form_label %}
    {% set label_class = label_class|default('block text-blue-800') %}
    {{ parent() }}
{% endblock form_label %}

