{% use 'tailwind_2_layout.html.twig' %}

{% block form_row %}
    {% set row_class = row_class|default('mb-2') %}
    {{ parent() }}
{% endblock form_row %}

{% block textarea_widget  %}
    {% set widget_class = widget_class|default('w-full rounded-sm border-1 border-blue-600 justify-start items-center placeholder:text-gray-500 focus:ring-1') %}
    {{ parent() }}
{% endblock textarea_widget  %}

{% block checkbox_widget  %}
    {% set widget_class = widget_class|default('focus:ring-1 focus:ring-offset-1 mr-2') %}
    {{ parent() }}
{% endblock checkbox_widget  %}

{% block button_attributes  %}
    {% set widget_class = widget_class|default('rounded px-4 py-2 flex-1 bg-blue-800 font-bold text-white') %}
    {{ parent() }}
{% endblock button_attributes  %}

{% block form_label %}
    {% set label_class = label_class|default('block text-base text-blue-950') %}
    {{ parent() }}
{% endblock form_label %}

{%- block form_errors -%}
    {%- set error_item_class = error_item_class|default('text-red-500 font-medium ') -%}
    {{- parent() -}}
{%- endblock form_errors -%}

{%- block form_help -%}
    {%- set help_class = help_class|default('block text-gray-800') -%}
    {{- parent() -}}
{%- endblock form_help -%}